<script>
    function handleDeleteApi(id) {
        console.log(id);
        let response =  fetch('https://localhost:7251/api/productsapi/sanpham/' + id, {
            method: 'delete'
        })
            .then(response => {
                if (response.ok) {
                    alert('Xóa sản phẩm thành công');
                    location.reload();
                } else {
                    alert('Sửa sản phẩm không thành công');
                }
            })
    };
</script>

